generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Server {
  id   Int    @id @default(autoincrement())
  name String
  ip   String
  host Int?
}

model Port {
  id       Int     @id @default(autoincrement())
  serverId Int
  note     String?
  port     Int
}
